                alert("ExceptionType: " + r.ExceptionType);  
            }  
        });  
        return false;  
        
    }
</script>



<script>
    var chkItems = new Array();

    function ajaxadd() {
        $("#cards input[type='checkbox']").each(function() {
            var row = $(this);
            if (row.is(':checked')) {
                var mov = { Name: row.attr("data-name"), movieId: row.data("id")}
                chkItems.push(mov);
            }
            
        });
    
      

    $.ajax({
        type: "POST",
        url: '@Url.Action("SumbitToDB","Movies")',
        data: { Movie: chkItems },
        dataType: 'json',
        success: function (data) {
            $("#tblStudent").hide(200);
            $("#success").show(200);
        },
        error: function(e) {
            alert(e.message);
        }
        });
        }

</script>






